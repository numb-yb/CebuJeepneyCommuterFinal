<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CebuJeepneyCommuter.Views.SearchRoutesPage"
             Title="Search Routes"
             BackgroundColor="White">

    <VerticalStackLayout Padding="50" Spacing="-10">

        <!-- Top Navigation Bar -->
        <Frame CornerRadius="25" BackgroundColor="White" HasShadow="False" Padding="0">
            <Grid ColumnDefinitions="Auto,*" Padding="10">
                <Label Text="â—€"
                       TextColor="black"
                       FontSize="20"
                       VerticalOptions="Center">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoBackCommand}" />
                    </Label.GestureRecognizers>
                </Label>
                <Label Grid.Column="1"
                       Text="Search Routes"
                       FontSize="16"
                       TextColor="Black"
                       VerticalOptions="Center" />
            </Grid>
        </Frame>

        <!-- Origin Entry & Suggestions -->
        <Frame CornerRadius="25" BorderColor="Black" HasShadow="False" Padding="10,5" BackgroundColor="Black" Margin="0,10,0,0">
            <VerticalStackLayout>
                <Entry Placeholder="Origin"
                       Text="{Binding Origin}"
                       BackgroundColor="Transparent"
                       TextColor="White" />
                <CollectionView ItemsSource="{Binding OriginSuggestions}"
                                SelectionMode="Single"
                                SelectionChanged="OnOriginSelected"
                                HeightRequest="150">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding .}"
                                   TextColor="Black"
                                   BackgroundColor="LightGray"
                                   Padding="10"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </Frame>

        <!-- Destination Entry & Suggestions -->
        <Frame CornerRadius="25" BorderColor="Black" HasShadow="False" Padding="10,5" BackgroundColor="Black" Margin="0,10,0,0">
            <VerticalStackLayout>
                <Entry Placeholder="Destination"
                       Text="{Binding Destination}"
                       BackgroundColor="Transparent"
                       TextColor="White" />
                <CollectionView ItemsSource="{Binding DestinationSuggestions}"
                                SelectionMode="Single"
                                SelectionChanged="OnDestinationSelected"
                                HeightRequest="150">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Label Text="{Binding .}"
                                   TextColor="Black"
                                   BackgroundColor="White"
                                   Padding="10"
                                   LineBreakMode="WordWrap"
                                   VerticalOptions="Center"
                                   FontSize="14"/>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </Frame>

        <!-- Show on Map Button -->
        <Frame CornerRadius="25" BorderColor="White" HasShadow="False" Padding="0"
               HorizontalOptions="Center" Margin="0,10,0,0">
            <Button Text="Show On Map"
                    Command="{Binding ShowMapCommand}"
                    BackgroundColor="Transparent"
                    TextColor="Black"
                    BorderColor="White"
                    CornerRadius="25"
                    WidthRequest="250"
                    HeightRequest="40" />
        </Frame>

        <!-- Map Placeholder -->
        <Frame BackgroundColor="LightGray"
               CornerRadius="10"
               Padding="0"
               Margin="0,20,0,0"
               HeightRequest="300"
               HasShadow="False">
            <Label Text="Map Preview"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="DarkGray"/>
        </Frame>

    </VerticalStackLayout>
</ContentPage>
