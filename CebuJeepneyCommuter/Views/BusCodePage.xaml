<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:CebuJeepneyCommuter.ViewModels"
             x:Class="CebuJeepneyCommuter.Views.BusCodePage"
             x:DataType="viewmodel:BusCodePageViewModel"
             Title="Bus Code Page">

    <StackLayout Padding="20" Spacing="15">
        <Label Text="Bus Code"
               FontSize="24"
               HorizontalOptions="Center"
               VerticalOptions="Start" />

        <Button Text="â—€ Back"
                HorizontalOptions="Start"
                Margin="0,10,0,20" 
                Clicked="OnBackButtonClicked" />

        <!-- Bus Type picker, disabled as per your original design -->
        <Picker Title="Bus Type"
                ItemsSource="{Binding BusTypes}"
                SelectedItem="{Binding SelectedBusType}"
                IsEnabled="False"/>

        <!-- Bus Classification picker, disabled -->
        <Picker Title="Bus Classification"
                ItemsSource="{Binding Classifications}"
                SelectedItem="{Binding SelectedClassification}"
                IsEnabled="False"/>

        <!-- Bus Code picker showing the route code -->
        <Picker Title="Bus Code"
                ItemsSource="{Binding RouteCodes}"
                SelectedItem="{Binding SelectedRouteCode}"
                IsEnabled="False"/>

        <Label Text="Passenger Type"
               TextColor="Black"
               FontAttributes="Bold"
               Margin="0,20,0,0"/>

        <Picker Title="Select Type"
                TextColor="Black"
                ItemsSource="{Binding PassengerTypes}"
                SelectedItem="{Binding SelectedPassengerType}"
                BackgroundColor="White"/>

        <Button Text="PROCEED TO PAYMENT"
                Command="{Binding ShowMapCommand}"
                BackgroundColor="White"
                TextColor="Black"
                Margin="0,40,0,0"/>
    </StackLayout>
</ContentPage>
